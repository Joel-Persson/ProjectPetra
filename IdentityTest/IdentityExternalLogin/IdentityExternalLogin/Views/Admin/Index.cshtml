@model IEnumerable<IdentityExternalLogin.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
<div class="panel-heading">User Accounts</div>
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
       
    </tr>

    @if (!Model.Any())
    {
        <tr>
            <td colspan="4" class="text-center">No User Accounts</td>
        </tr>
    }
    else
    {
        foreach (var applicationUser in Model)
        {
            <tr>
                <td>@applicationUser.Id</td>
                <td>@applicationUser.UserName</td>
                <td>@applicationUser.Email</td>
                <td>
                    @using (Html.BeginForm("Delete", "Admin", new { id = applicationUser.Id }))
                    {
                        <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                    }
                </td>  
            </tr>
          
        }
    }
</table>
</div>


